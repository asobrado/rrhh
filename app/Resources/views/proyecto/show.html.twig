{% extends 'base.html.twig' %}

{% block body %}
    <h1>Proyecto</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ proyecto.id }}</td>
            </tr>
            <tr>
                <th>Nombre</th>
                <td>{{ proyecto.nombre }}</td>
            </tr>
            <tr>
                <th>Descripcion</th>
                <td>{{ proyecto.descripcion }}</td>
            </tr>
            <tr>
                <th>Slug</th>
                <td>{{ proyecto.slug }}</td>
            </tr>
            <tr>
                <th>Logo</th>
                <td>{{ proyecto.logo }}</td>
            </tr>
            <tr>
                <th>Web</th>
                <td>{{ proyecto.web }}</td>
            </tr>
            <tr>
                <th>Facebook</th>
                <td>{{ proyecto.facebook }}</td>
            </tr>
            <tr>
                <th>Twitter</th>
                <td>{{ proyecto.twitter }}</td>
            </tr>
            <tr>
                <th>Youtube</th>
                <td>{{ proyecto.youtube }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('proyecto_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('proyecto_edit', { 'id': proyecto.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
