{% extends 'base.html.twig' %}

{% block body %}
    <h1>Empleados list</h1>

    <table>
        <thead>
            <tr>
                <th>Telefono</th>
                <th>Apellido</th>
                <th>Fechanacimiento</th>
                <th>Fecha_ingreso</th>
                <th>Finretiro</th>
                <th>Id</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for empleado in empleados %}
            <tr>
                <td><a href="{{ path('empleado_show', { 'id': empleado.id }) }}">{{ empleado.telefono }}</a></td>
                <td>{{ empleado.apellido }}</td>
                <td>{{ empleado.fechaNacimiento }}</td>
                <td>{% if empleado.fechaingreso %}{{ empleado.fechaingreso|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{% if empleado.finRetiro %}{{ empleado.finRetiro|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{{ empleado.id }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('empleado_show', { 'id': empleado.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('empleado_edit', { 'id': empleado.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('empleado_new') }}">Create a new empleado</a>
        </li>
    </ul>
{% endblock %}
