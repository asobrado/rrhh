{% extends ':app:list.html.twig' %}


{% block page_breadcrumb %}
    {{ parent() }}
    <li>
        Listado de Cargos
    </li>
{% endblock %}

{% block acciones %}
    {% embed ':app:list_actions.html.twig' %}
        {% block links_acciones %}
            <a href="{{ path('cargo_new') }}" class="btn btn-primary"><i class="fa fa-plus"></i> Nuevo</a>

        {% endblock %}
    {% endembed %}
{% endblock %}

{% block listado -%}

    <table class="table table-striped table-bordered table-hover datatable">
        <thead>
        <tr>
            <th>Nombre</th>
            <th>Acciones</th>
        </tr>
        </thead>
        <tbody>
        {% for cargo in cargos %}
            <tr>
                <td>{{ cargo.nombre }}</td>
                <td><a href="{{ path('cargo_edit', {'id': cargo.id}) }}"><span class="fa fa-pencil fontsize16"
                                                                               style="margin-right:4px;"
                                                                               data-toggle="tooltip"
                                                                               data-placement="top" title=""
                                                                               data-original-title="Editar"></span></a>
                    <a href="javascript:if(confirm('Esta seguro que desea ELIMINAR la MenuItem {{ cargo }}? ALERTA: Esta accion no podra ser deshecha'))window.location='{{ path('cargo_delete', {'id': cargo.id}) }}'"><span
                                class="fa fa-times-circle fontsize16" style="color:#F00;" data-toggle="tooltip"
                                data-placement="top" title="Eliminar"></span></a>                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

{% endblock %}
